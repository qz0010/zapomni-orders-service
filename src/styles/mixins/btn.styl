.mxn-btn
  display: inline-flex
  align-items: center
  box-sizing: border-box
  border: none
  outline: none
  text-decoration: none
  transition: background-color $sFast ease-in-out, color $sFast ease-in-out, box-shadow $sFast ease-in-out, opacity $sFast ease-in-out
  border-radius: 4px
  font-family: $ff-1
  line-height: 1
  cursor: pointer
  background-color: transparent;

  &:disabled, &.f-disabled
    //pointer-events: none
    cursor: default;
    opacity: .4;
  &.f-disabled
    cursor: default;

  &_full-width
    width: 100%
    flex: 0 0 100%

  &_ta-c
    text-align: center
    justify-content: center

  &_fw-400
    font-weight: 400

  &_action
    padding: 8px 16px
    border: 1px solid transparent
    border-radius: 28px
    font-size: 14px
    font-weight: 500
    background: $c-theme-1;
    color: $c-theme-1-3;

    &-p-2
      padding: 8px

    &-fw-400
      font-weight: 400

    &-light
      border-color: $c-theme-5;
      color: $c-theme-5;

    &-light-accent
      background: transparent;
      border-color: $c-theme-1-2;
      color: $c-theme-3;

    &-light-bg
      background: $c-theme-2;


.device-size
  &-large
    .mxn-btn
      &_action
        padding: 19px 2px
        font-size: 16px

        &-p-1
          padding: 19px 16px

.device-size
  &-medium, &-large
    .mxn-btn
      &_action
        &-sz-3
          padding: 19px 2px
          font-size: 16px
