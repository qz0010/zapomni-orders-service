.modal-dialog
  &__overlay, &__wrap
    position: fixed;
    top: 0
    left: 0
    width: 100%
    height: 100%

  &__overlay
    z-index: 1
    background: rgba(0, 0, 0, .6);

  &__wrap
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2

  &__body
    position: relative;
    z-index: 3
