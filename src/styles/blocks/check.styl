.check
  display: flex;
  align-items center

  &__label
    display: flex;
    align-items center
    cursor: pointer;

  &__check
    position: absolute;
    visibility: hidden;

    &-wrap
      position: relative;
      margin-right: 12px
      font-size: 0
      line-height: 1

    &:checked ~ .check__check-fake
      background: $c-theme-1;
      & > svg
        opacity: 1

    &-fake
      display: flex;
      align-items center;
      justify-content: center;
      width: 24px
      height: 24px
      border-radius: 3px;
      cursor: pointer;
      background: #A8A8A8;

      & > svg
        opacity: 0
        width: 14px
        height: auto;
