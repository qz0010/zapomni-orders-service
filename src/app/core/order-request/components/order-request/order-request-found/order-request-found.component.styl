$item-gap = 20px
$item-gap-calc = $item-gap / 2;
$item-gap-bottom = 28px

.b
  &__form
    &-body
      display: flex;
      flex-wrap wrap;
      max-width 620px + $item-gap;
      margin: 0 (- $item-gap-calc) (- $item-gap-bottom);

    &-item
      flex: 1 1 300px
      margin: 0 $item-gap-calc $item-gap-bottom

    &-footer
      margin-top: 28px

  &__btn
    display: block;
    width: 165px;
